{% extends "layout.jinja" %}

{% block title %}Главная | Billiard Clubs{% endblock %}

{% block content %}
<div class="card billiard-card h-100">
    <img src="{{ club.photo }}" 
         class="card-img-top club-image" 
         alt="{{ club.name }}">
    <div class="card-body">
        <h5 class="card-title">{{ club.name }}</h5>
        <p class="card-text">
            <i class="fas fa-map-marker-alt me-1 text-muted"></i>
            {{ club.address.city }} {{ club.address.street }} {{ club.address.building }}
        </p>
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <span class="badge bg-success">
                    <i class="fas fa-star me-1"></i>3
                </span>
                <span class="ms-2 text-muted">(5 отзывов)</span>
            </div>
            <a href="#" 
               class="btn btn-sm btn-outline-primary">
                Подробнее
            </a>
        </div>
    </div>
    <div class="card-footer bg-white">
        <small class="text-muted">
            {% if club.is_work_now %}
            <span class="text-success">
                <i class="fas fa-door-open me-1"></i>Открыто До {{ club.closing_time }}
            </span>
            {% else %}
            <span class="text-danger">
                <i class="fas fa-door-closed me-1"></i>Закрыто До {{ club.opening_dt }}
            </span>
            {% endif %}
        </small>
    </div>
</div>
{% endblock %}