{% macro pagination(context) %}
{% if context.total_count > 9 %}
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        {% if context.page > 1 %}
        <li class="page-item">
            <a class="page-link" 
            href="{{context.url}}?page={{context.page-1}}&offset={{(context.page-2)*9}}&limit={{context.limit}}">Назад</a>
        </li>
        {% else %}
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Назад</a>
        </li>
        {% endif %}

        {% for page_num in range(1, ((context.total_count // 9) | round(0, "ceil") | int) + 2) %}
        {% if page_num == context.page %}
        <li class="page-item active">
            <a class="page-link" href="#">{{ page_num }}</a>
        </li>
        {% else %}
        <li class="page-item">
            <a class="page-link" 
            href="{{context.url}}?page={{page_num}}&offset={{(page_num-1)*9}}&limit={{context.limit}}">.{{ page_num }}</a>
        </li>
        {% endif %}
        {% endfor %}

        {% if context.page < ((context.total_count // 9) | round(0, "ceil") | int) + 1 %}
        <li class="page-item">
            <a class="page-link"
                href="{{context.url}}?page={{context.page+1}}&offset={{(context.page)*9}}&limit={{context.limit}}">Вперед</a>
        </li>
        {% else %}
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Вперед</a>
        </li>
        {% endif %}
    </ul>
</nav>
{% endif %}
{% endmacro %}